<!DOCTYPE html>
<html>
  <head>
    <%- include ('partial/header') %>
  </head>
  <body>
    <%- include ('partial/navbar-login') %>
    <div class='container mt-4'>
      <div class='row justify-content-center'>
        <div class='col-md-6'>
          <ul class='signup-progress-bar'>
            <li class='active'>username</li>
            <li class='active'>Info</li>
            <li>Profile Picture</li>
          </ul>
        </div>
      </div>
      <div class='row justify-content-center'>
        <div class='col-md-6'>
          <form action="/signup/2" method="POST">
            <div class='form-group my-4'>
              <label for="about">Tell us about yourself</label>
              <input type="text" class='form-control mt-2' name='about' id='about' placeholder='I like scooby snacks'>
            </div>
            <div class='form-group my-4'>
              <label for="dob">Birthday</label>
              <input type="date" class='form-control mt-2' name='dob' id='dob'>
            </div>
            <input type="hidden" name='name' value='<%= name %>'>
            <input type="hidden" name='password' value='<%= password %>'>
            <button type="submit" class='btn btn-primary'>Next step</button>
          </form>
        </div>
      </div>
    </div>

    <%- include ('partial/requiredjs') %>

  </body>
</html>