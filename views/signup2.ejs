<!DOCTYPE html>
<html>
  <head>
    <%- include ('partial/header') %>
  </head>
  <body>
    <%- include ('partial/navbar-login') %>
    <div class='container mt-4'>
      <div class='row justify-content-center'>
        <div class='col-md-6'>
          <p>Just one more step!</p>
          <p>Insert progress bar here</p>
        </div>
      </div>
      <div class='row justify-content-center'>
        <div class='col-md-6'>
          <form action="/signup/2" method="POST">
            <div class='form-group my-4'>
              <label for="about">Tell us about yourself</label>
              <input type="text" class='form-control mt-2' name='about' id='about' placeholder='I like scooby snacks'>
            </div>
            <div class='form-group my-4'>
              <label for="dob">Input your password</label>
              <input type="date" class='form-control mt-2' name='dob' id='dob'>
            </div>
            <input type="hidden" name='name' value='<%= name %>'>
            <input type="hidden" name='password' value='<%= password %>'>
            <button type="submit" class='btn btn-primary'>Create Account</button>
          </form>
        </div>
      </div>
    </div>

    <%- include ('partial/requiredjs') %>

  </body>
</html>