<!DOCTYPE html>
<html>
  <head>
    <%- include ('partial/header') %>
  </head>
  <body>
    <%- include ('partial/navbar-login') %>
    <div class='container mt-4'>
      <div class='row justify-content-center'>
        <div class='col-md-6' style='margin-top:100px;'>
          <ul class='signup-progress-bar'>
            <li class='active'>username</li>
            <li>Info</li>
            <li>Profile Picture</li>
          </ul>
        </div>
      </div>
      <div class='row justify-content-center'>
        <div class='col-md-6'>
          <form action="/signup/1" method="POST">
            <div class='form-group my-4'>
              <label for="name">Choose your username</label>
              <input type="text" class='form-control mt-2' name='name' id='name' placeholder='username'>
            </div>
            <div class='form-group my-4'>
              <label for="passwordtemp">Input your password</label>
              <input type="password" class='form-control mt-2' name='passwordtemp' id='passwordtemp' placeholder='password'>
            </div>
            <div class='form-group my-4'>
              <label for="password">Input your password again</label>
              <input type="password" class='form-control mt-2' name='password' id='password' placeholder='password'>
            </div>
            <button type="submit" class='btn btn-primary'>Proceed</button>
          </form>
        </div>
      </div>
    </div>

    <%- include ('partial/requiredjs') %>

  </body>
</html>