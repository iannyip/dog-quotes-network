<!DOCTYPE html>
<html>
  <head>
    <%- include ('partial/header') %>
  </head>
  <body>
    <%- include ('partial/navbar') %>
    <div class="container mt-4">
      <div class='row'>
        <h1><%= info.name %></h1>
      </div>
      <div class='row'>
        <div class='col-md-6'>
          <form action="" class="mt-4">
            <div class="form-group">
              <label for="" class=""><b>Name</b></label>
              <input type="text" class="form-control-plaintext" name="name" value="<%= info.name %>" readonly>
            </div>
            <div class="form-group">
              <label for="" class=""><b>DOB</b></label>
              <input type="text" class="form-control-plaintext" name="dob" value="<%= info.dob %>" readonly>
            </div>
            <div class="form-group">
              <label for="" class=""><b>About</b></label> 
              <input type="text" class="form-control-plaintext" name="about" value="<%= info.about %>" readonly>
            </div>
            <div class="form-group">
              <label for="" class=""><b>Status</b></label>
              <input type="text" class="form-control-plaintext" name="status" value="<%= info.status %>" readonly>
            </div>
            <div class="form-group">
              <label for="" class=""><b>Followers</b></label>
              <input type="text" class="form-control-plaintext" name="status" value="<%= followers %>" readonly>
            </div>
          </form>
          <div class='row'>
            <% if (followStatus === true) { %> 
              <form action="/unfollow?_method=DELETE" method='POST'>
                <input type="hidden" name='followed' value=<%= info.id %>>
                <button type='submit' class='btn btn-primary'>Unfollow</button>
              </form>
            <% } else { %>
              <form action="/follow" method='POST'>
                <input type="hidden" name='followed' value=<%= info.id %>>
                <button class='btn btn-primary'>Follow</button>
              </form>
            <% } %>
          </div>
        </div>
        <div class='col-md-6'>
          <h3>Your Quotes</h3>
          <div class='row'>
            <% quotes.forEach(quote => { %> 
              <div class='col-12'>
                <p><%= quote.quote %></p>
              </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>

    <%- include ('partial/requiredjs') %>

  </body>
</html>